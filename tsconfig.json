{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "example",
    "src/tests/*"
  ],
  "include": [
    "example",
    "src/index.tsx"
  ]
}